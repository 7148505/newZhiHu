{
  "compilerOptions": {
    "target": "esnext",
    // "module": "esnext",
    "module": "commonjs",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": "",
    "watch": true,
    "types": ["webpack-env", "mocha", "chai","@types/node"],
    "paths": {
      "@/*": ["src/*"],
      "*": [
        "node_modules/*",
        "src/types/*"
    ]
    },
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"],
  },
  "include": [
    "src/**/*",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ],
  "exclude": ["node_modules"]
}
